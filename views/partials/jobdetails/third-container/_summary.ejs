<div class="third-container h-fit w-full featured-jobs-card px-4">
  <div class="header flex items-center gap-3 border-b border-blue-500 py-3">
    <div class="bg-btngreen w-9 h-9 rounded-full flex items-center justify-center"><%- mainIcon %></div>
    <h3><%= title %></h3>
  </div>
  <div class="px-2">
    <ul>
      <% items.forEach(item => { %>
      <li class="flex gap-2 py-2">
        <i class="<%= item.iconClass %>"></i>
        <p><%= item.content %></p>
      </li>
      <% }); %>
    </ul>
  </div>
</div>
