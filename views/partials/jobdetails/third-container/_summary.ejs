<div class="third-container mb-8 h-fit w-full featured-jobs-card p-4">
  <div class="header flex items-center gap-3 border-b border-grayBorder pb-3">
    <div class="bg-btngreen w-9 h-9 rounded-full flex items-center justify-center"><%- mainIcon %></div>
    <h3 class="font-poppins font-semibold text-lg text-title"><%= title %></h3>
  </div>
  <div class="px-2">
    <ul>
      <% items.forEach(item => { %>
      <li class="flex gap-3 py-2 mt-2 items-center  text-description font-medium">
        <i class="<%= item.iconClass %>"></i>
        <p><%= item.content %></p>
      </li>
      <% }); %>
    </ul>
  </div>
</div>
