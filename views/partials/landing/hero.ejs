<main class="hero-bg h-screen flex flex-col justify-center items-center lg:items-start">
  <section class="hero mx-auto w-10/12 md:max-w-xl lg:max-w-7xl">
    <div class="hero-content-container lg:w-8/12 lg:px-6 2xl:px-4">
      <div class="hero-txt">
        <h2 class="text-white font-bold text-3xl leading-tight mb-2.5 md:text-5xl md:leading-snug">Search Between More Than <span class="green-highlight">50,000</span> Remote Jobs.</h2>
        <p class="text-white font-bold mb-1">Trending Job Keywords:</p>
        <div class="hero-links grid gap-2 grid-cols-2 lg:grid-cols-4">
          <p class="green-highlight">Web developer</p>
          <p class="green-highlight">IOS developer</p>
          <p class="green-highlight">Android developer</p>
          <p class="green-highlight">Graphic designer</p>
        </div>
      </div>
      <!-- grid display on md and larger screens -->
      <div class="hero-search p-2 mt-7 rounded-md bg bg-white bg-opacity-20 md:grid md:grid-cols-4 md:rounded-full">
        <input type="text" placeholder="Search keywords" class="w-full px-5 py-3 rounded text-gray-400 md:border-r md:border-gray-400 md:py-6 md:rounded-tl-full md:rounded-bl-full" />
        <select name="" id="" class="w-full px-4 py-3 my-3 rounded text-gray-400 md:border-r md:border-gray-400 md:my-0 md:rounded-none">
          <option value="">Location</option>
          <option value="">Manila</option>
          <option value="">Pasig</option>
        </select>
        <select name="" id="" class="w-full px-4 py-3 mb-3 rounded text-gray-400 md:border-r md:border-gray-400 md:mb-0 md:rounded-none">
          <option value="">Category</option>
          <option value="">Programming</option>
          <option value="">Designing</option>
        </select>
        <div class="bg-btngreen px-4 py-3 flex items-center justify-center md:rounded-tr-full md:rounded-br-full hover:bg-green-700 duration-500 ease-in-out">
          <button type="submit" class="font-semibold text-white">SEARCH</button>
        </div>
      </div>
    </div>
  </section>
</main>
