<div class="flex flex-row">
    <div class="w-1/2 mr-2">
        <label for="fname" class="text-sm font-medium leading-6 text-gray-900">First Name</label>
        <input type="text" name="fname" class="h-8 w-full rounded-md border border-slate-300 text-sm pl-2 bg-transparent shadow-sm">
    </div>
    <div class="w-1/2 ">
        <label for="lname" class="text-sm font-medium leading-6 text-gray-900">Last Name</label>
        <input type="text" name="lname" class="h-8 w-full rounded-md border border-slate-300 text-sm pl-2 bg-transparent shadow-sm">
    </div>

</div>

