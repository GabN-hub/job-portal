 <!-- Parent Div of Apple LTD-->
 <div class="flex flex-col border shadow-md rounded p-5 w-full">
    <div
      class="flex flex-row justify-between border-b-2 items-center p-2"
    >
      <div class="flex flex-row items-center gap-2">
        <div>
          <img
            class="w-12 border rounded-full border-black"
            src="<%= image %>"
            alt=""
          />
        </div>
        <div class="flex flex-col">
          <span><%= sectionHeader %></span>
          <span><%= sectionSubHeader %></span>
        </div>
      </div>
      <div class="flex flex-row items-center gap-1">
        <div>No.</div>
        <div class="border px-3 py-1 rounded-full bg-green-500">2</div>
      </div>
    </div>
    <!-- Information -->
    <div class="flex flex-row justify-between items-center p-2">
      <div class="flex flex-col gap-2">
        <% sectionArray.forEach((array) => { %>
        <%- include("../../components/molecules/job-section", array) %>
        <% }) %>
      </div>

      <div class="flex flex-col gap-2">
        <div
          class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded text-center"
        >
          <button>Apply Now</button>
        </div>
        <div
          class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded text-center"
        >
          <button>View Job</button>
        </div>
      </div>
    </div>

    <!--End of Parent Div of Apple LTD-->
  </div>